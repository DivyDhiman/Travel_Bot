<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@drawable/background2" 
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:text="Driver Id.: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="Driver Mobile: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="18dp"
        android:text="Rating: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/driver_id"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/white_background"
        android:ems="10" />

    <EditText
        android:id="@+id/driver_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/driver_rating"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/white_background"
        android:ems="10" />

    <EditText
        android:id="@+id/driver_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/textView3"
        android:background="@drawable/white_background"
        android:ems="10" >
      
    </EditText>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:text="Note: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="21dp"
        android:text="Status: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/driver_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/driver_note"
        android:layout_toRightOf="@+id/textView3"
        android:background="@drawable/white_background"
        android:ems="10" />

    <EditText
        android:id="@+id/driver_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/driver_rating"
        android:layout_toRightOf="@+id/textView3"
        android:background="@drawable/white_background"
        android:ems="10" />

    <EditText
        android:id="@+id/driver_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/driver_rating"
        android:layout_toRightOf="@+id/textView3"
        android:background="@drawable/white_background"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:text="Address: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/driver_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/driver_status"
        android:layout_alignRight="@+id/driver_status"
        android:background="@drawable/white_background"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/add_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="14dp" android:layout_marginLeft="2dp"
        android:background="@drawable/blue_button"
        android:text="UPDATE DRIVER"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/delete_driver"
        android:layout_width="wrap_content" android:background="@drawable/red_button"
        android:layout_height="wrap_content" android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/add_driver" android:layout_marginRight="2dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/add_driver"
        android:text="DELETE DRIVER" />

</RelativeLayout>