<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/plan"
        android:layout_width="200dp"
        android:background="@drawable/green_button"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" android:textStyle="bold" android:textColor="#ffffffff"
        android:layout_marginTop="108dp"
        android:text="PLAN YOUR TRAVEL" />

    <Button
        android:id="@+id/booking_history"
        android:layout_width="200dp"
        android:layout_height="wrap_content" android:textStyle="bold" android:textColor="#ffffffff"
        android:layout_alignRight="@+id/plan"
        android:layout_below="@+id/plan"
        android:layout_marginTop="21dp"
        android:background="@drawable/grey_button"
        android:text="BOOKING HISTORY" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/plan"
        android:layout_marginRight="14dp"
        android:text="yash6992"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plan"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:text="username:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_history"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="LOGOUT" />

</RelativeLayout>