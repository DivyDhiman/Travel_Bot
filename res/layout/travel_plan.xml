<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent" >

   
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Plan your travel."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_background"
                android:ems="10"
                android:hint="To" />

            <EditText
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/to"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_background"
                android:ems="10"
                android:hint="From" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/from"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="18dp"
                android:text="Hi "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignRight="@+id/from"
                android:text="yash6992"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/to"
                android:layout_marginTop="20dp" >
            </LinearLayout>

                      <EditText
                          android:id="@+id/dd"
                          android:layout_width="60dp"
                          android:layout_height="wrap_content"
                          android:layout_alignLeft="@+id/to"
                          android:layout_centerVertical="true"
                          android:background="@drawable/white_background"
                          android:ems="10"
                          android:hint="DD"
                          android:inputType="number" />

                      <EditText
                          android:id="@+id/mm"
                          android:layout_width="60dp"
                          android:layout_height="wrap_content"
                          android:layout_alignBaseline="@+id/dd"
                          android:layout_alignBottom="@+id/dd"
                          android:layout_centerHorizontal="true"
                          android:background="@drawable/white_background"
                          android:ems="10"
                          android:hint="MM"
                          android:inputType="number" />

                      <EditText
                          android:id="@+id/yyyy"
                          android:layout_width="60dp"
                          android:layout_height="wrap_content"
                          android:layout_alignBaseline="@+id/mm"
                          android:layout_alignBottom="@+id/mm"
                          android:layout_alignRight="@+id/to"
                          android:background="@drawable/white_background"
                          android:ems="10"
                          android:hint="YYYY"
                          android:inputType="number" />

                      <EditText
                          android:id="@+id/min"
                          android:layout_width="90dp"
                          android:layout_height="wrap_content"
                          android:layout_alignBaseline="@+id/hh"
                          android:layout_alignBottom="@+id/hh"
                          android:layout_alignRight="@+id/yyyy"
                          android:background="@drawable/white_background"
                          android:ems="10"
                          android:hint="Min"
                          android:inputType="number" />

                      <CheckBox
                          android:id="@+id/exclusive"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignBaseline="@+id/pick_at_home"
                          android:layout_alignBottom="@+id/pick_at_home"
                          android:layout_toRightOf="@+id/mm"
                          android:text="Exclusive" />

                      <CheckBox
                          android:id="@+id/pick_at_home"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignLeft="@+id/hh"
                          android:layout_below="@+id/min"
                          android:layout_marginTop="27dp"
                          android:text="pick at home" />

                      <Button
                          android:id="@+id/submit"
                          android:layout_width="110dp"
                          android:layout_height="wrap_content"
                          android:layout_alignRight="@+id/min"
                          android:layout_below="@+id/exclusive" android:textStyle="bold" android:textColor="#ffffffff"
                          android:layout_marginTop="23dp"
                          android:background="@drawable/green_button"
                          android:text="SUBMIT" />

                      <EditText
                          android:id="@+id/nop"
                          android:layout_width="60dp"
                          android:layout_height="wrap_content"
                          android:layout_alignBaseline="@+id/submit"
                          android:layout_alignBottom="@+id/submit"
                          android:layout_alignLeft="@+id/pick_at_home"
                          android:background="@drawable/white_background"
                          android:ems="10"
                          android:hint="NOP"
                          android:inputType="number" />

                      <EditText
                          android:id="@+id/hh"
                          android:layout_width="90dp"
                          android:layout_height="wrap_content"
                          android:layout_alignLeft="@+id/dd"
                          android:layout_below="@+id/dd"
                          android:layout_marginTop="22dp"
                          android:background="@drawable/white_background"
                          android:ems="10"
                          android:hint="HH"
                          android:inputType="number" />

</RelativeLayout>