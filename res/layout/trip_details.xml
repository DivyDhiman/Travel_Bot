<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"  android:textAppearance="?android:attr/textAppearanceMedium" 
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Date:"
                android:textColor="#ff000000"
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_date"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="12.3.2013"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Time:"  android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textColor="#ff000000"
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_time"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="04:30pm"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="To:"
                android:textColor="#ff000000"  android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_to"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Pilani"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="From:"
                android:textColor="#ff000000"
                android:textSize="15.0dip"  android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_from"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="New Delhi"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/travel_id"
        android:layout_width="wrap_content" android:background="@drawable/white_background"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="123123"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/car_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3" android:background="@drawable/white_background"
        android:layout_alignLeft="@+id/travel_id"
        android:text="312312"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/travel_id"
        android:text="Driver ID.:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/driver_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/car_id"
        android:background="@drawable/white_background"
        android:text="123123"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="21dp"
        android:text="Car ID.:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/textView1"
        android:text="Travel ID.:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Trip Feedback"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff505050"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"  android:textAppearance="?android:attr/textAppearanceMedium" 
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Date:"
                android:textColor="#ff000000"
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_date"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="12.3.2013"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Time:"  android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textColor="#ff000000"
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_time"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="04:30pm"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="To:"
                android:textColor="#ff000000"  android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_to"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Pilani"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="From:"
                android:textColor="#ff000000"
                android:textSize="15.0dip"  android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_from"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="New Delhi"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="No. of Passengers:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/no_of_passengers"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="4"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Success:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/success"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Y"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="Overall Rating: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="15.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overall_average_rating"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="bottom|left|center"
                android:text="7/10"
                android:textColor="#ff000000"
                android:textSize="10.0dip" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/LinearLayout01"
        android:layout_marginTop="28dp" android:textStyle="bold"
        android:text="Feedback:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5" android:background="@drawable/white_background"
        android:layout_alignLeft="@+id/driver_id"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Trip Details"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff505050"
        android:textStyle="bold" />

</RelativeLayout>